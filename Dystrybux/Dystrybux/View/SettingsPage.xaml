<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dystrybux.View.SettingsPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Ustawienia" FontSize="20" TextColor="White" FontAttributes="Bold" />
        </StackLayout>
    </NavigationPage.TitleView>

    <StackLayout>
        <Button Text="Dane osobowe" Command="{Binding UserDataCommand}" />
        <Button Text="Zmiana hasła" />
        <Button Text="Powiadomienia"/>
        <Button Text="Wyloguj" Command="{Binding LogOut}" />
    </StackLayout>

</ContentPage>