<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dystrybux.View.MainMenu">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="{Binding UserName}" FontSize="20" TextColor="White" FontAttributes="Bold" />
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems></ContentPage.ToolbarItems>
    
    <StackLayout>
        <Label FontSize="20" Padding="0,20,0,0" TextColor="Black">Menu główne</Label>
        <Button Text="Lista produktów" Command="{Binding ProductListCommand}" />
        <Button Text="Zamówienia" Command="{Binding OrderListCommand}" />
        <Button Text="Testy" Command="{Binding TestCommand}" />
        <Button Text="Ustawienia" Command="{Binding SettingsCommand}" />
    </StackLayout>

</ContentPage>